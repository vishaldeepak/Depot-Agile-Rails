<p id="notice"><%= notice %></p>

<h1>Listing Lint Items</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lint_items.each do |lint_item| %>
      <tr>
        <td><%= lint_item.product %></td>
        <td><%= lint_item.cart %></td>
        <td><%= link_to 'Show', lint_item %></td>
        <td><%= link_to 'Edit', edit_lint_item_path(lint_item) %></td>
        <td><%= link_to 'Destroy', lint_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

